<div class="col-md-6 offset-sm-3 text-center">
                    <div class="card card-signin my-5">
                        <div class="card-body">
                            <h5 class="card-title text-center">Register</h5>
                            <br>
                            <form class="form-signin">
                                <div class="form-label-group text-left">
                                    <label for="inputEmail">Your name</label>
                                    <input type="name" id ="name" class="form-control" placeholder="Your name" required autofocus>

                                </div>

                                <div class="form-label-group text-left">
                                    <label for="inputEmail">Email address</label>
                                    <input type="email" id ="email" class="form-control" placeholder="Email address" required autofocus>

                                </div>

                                <div class="form-label-group text-left">
                                    <label for="inputPassword">Password</label>
                                    <input type="password" id ="password" class="form-control" placeholder="Password" required>

                                </div>

                                <div class="form-label-group text-left">
                                    <label for="inputRoll">Your roll</label>
                                    <select class="form-control" id="role" name="role">
                                        <option>Employee</option>
                                        <option>Hardware Engineer</option>
                                        <option>Software Engineer</option>
                                        <option>Network Engineer</option>
                                    </select>
                                </div>
                                <br>
                                <button class="btn btn-lg btn-primary btn-block text-uppercase" id ="submit" >Submit</button>

                            </form>
                        </div>
                    </div>
                </div>